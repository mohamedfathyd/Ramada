<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/backshape"
    android:layoutDirection="ltr"
    android:layout_height="370dp">
    <ImageView
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_above="@+id/d"
        android:background="@drawable/logo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="#000000"
        android:id="@+id/d"
        android:layout_above="@+id/layout_otp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_margin="20dp"
        android:text="أدخل كود التفعيل المكون من 6 أرقام"
        />
    <LinearLayout
        android:id="@+id/layout_otp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_gravity="center"
    android:layout_below="@+id/d"
        android:gravity="center"
    android:orientation="horizontal">
        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textColor="#000000"
            app:height="50dp"
            app:otp_box_background="@drawable/shapea"
            app:width="50dp"
            app:bar_enabled="true"
             app:bar_height="2dp"
            app:length="6"
            app:otp_text_size="24dp"/>
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout_otp"
        android:layout_marginTop="35dp"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:id="@+id/cunti"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:background="@drawable/backshape2"
        android:text="تأكيد"/>
</LinearLayout>